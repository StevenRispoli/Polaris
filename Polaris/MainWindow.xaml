<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Polaris" x:Class="Polaris.MainWindow"
        Title="Polaris" Width="1050" Height="695"
        MinWidth="1050" MinHeight="660" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:PolarisDataSet x:Key="PolarisDataSet"/>
        <CollectionViewSource x:Key="tblUsersViewSource" Source="{Binding tblUsers, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblPlatesViewSource" Source="{Binding tblPlates, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblComboSizeViewSource" Source="{Binding tblComboSize, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblComboLocationViewSource" Source="{Binding tblComboLocation, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblPlateCleaningsViewSource" Source="{Binding tblPlateCleanings, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblCassettesViewSource" Source="{Binding tblCassettes, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblCassetteCleaningsViewSource" Source="{Binding tblCassetteCleanings, Source={StaticResource PolarisDataSet}}"/>
        <CollectionViewSource x:Key="tblCassetteServicingsViewSource" Source="{Binding tblCassetteServicings, Source={StaticResource PolarisDataSet}}"/>
    </Window.Resources>
    <Grid Background="#FF555555" Margin="0,0,0,0">
        <Menu HorizontalAlignment="Stretch" Height="25" Margin="0,0,0,0" VerticalAlignment="Top" Width="Auto">
            <MenuItem Header="File">
                <!--<MenuItem x:Name="filePrint" Header="Print" Click="Button_Click_btnPrint" />
                <Separator/>-->
                <MenuItem x:Name="addOptions" Header="Add">
                    <MenuItem x:Name="addSize" Header="Plate/Cassette Size" Click="Button_Click_openAddSize"/>
                    <MenuItem x:Name="addLocation" Header="Location" Click="Button_Click_openAddLocation"/>
                </MenuItem>
                <MenuItem x:Name="deleteOptions" Header="Delete">
                    <MenuItem x:Name="deleteSize" Header="Plate/Cassette Size" Click="Button_Click_openDeleteSize"/>
                    <MenuItem x:Name="deleteLocation" Header="Location" Click="Button_Click_openDeleteLocation"/>
                </MenuItem>
                <MenuItem x:Name="updateUserInfo" Header="Update Account" Click="Button_Click_openUpdateAccountBoxGrid"/>
            </MenuItem>
        </Menu>
        <TabControl Background="#FF555555" HorizontalAlignment="Stretch" Height="Auto" Margin="0,30,0,0" VerticalAlignment="Stretch" Width="Auto">

            <!--Start Plates TabItem-->

            <TabItem x:Name="tabPlates" Header="Plates" Height="25" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left">
                <Grid Background="#FF555555">
                    <DockPanel x:Name="dkpPlates" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0" Grid.ColumnSpan="2">
                        <Label x:Name="lblPlates" Content="Imaging Plates" FontSize="18" Foreground="#FF11E81B" VerticalAlignment="Top" HorizontalAlignment="Left" Focusable="False" Width="150" Height="25" Margin="0,0,0,0" Padding="0,0,0,0" />
                        <Button x:Name="btnViewPlates" Content="Plates" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="200,0,0,0" Focusable="False" Click="Button_Click_btnViewPlates"/>
                        <Button x:Name="btnViewPlateCleanings" Content="Cleanings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="15,0,0,0" Focusable="False" Click="Button_Click_btnViewPlateCleanings"/>
                        <Button x:Name="btnPlatesRefresh" Content="Refresh" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Margin="15,0,0,0" Focusable="False" Click="Button_Click_tabPlatesRefresh"/>
                    </DockPanel>

                    <DockPanel x:Name="dkpPlatesQ" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0" Grid.Column="1">
                        <ComboBox x:Name="cmbPlatesQuery" HorizontalAlignment="Right" VerticalAlignment="Top" Width="250" Height="23" Margin="0,0,0,0"  Focusable="False">
                            <ComboBoxItem Content="Plates by barcode" />
                            <ComboBoxItem Content="New Plates" />
                            <ComboBoxItem Content="Plates due for cleaning" />
                            <ComboBoxItem Content="Plates needing replacement" />
                            <ComboBoxItem Content="Plates bought by date" />
                            <ComboBoxItem Content="Plates bought in past given weeks" />
                            <ComboBoxItem Content="Plates bought in past given months" />
                            <ComboBoxItem Content="Expired plate warranties" />
                            <ComboBoxItem Content="Plate warranties expiring in given number of weeks" />
                            <ComboBoxItem Content="Plates by location" />
                            <ComboBoxItem Content="Plate by who is currently using it" />
                        </ComboBox>
                        <Button x:Name="btnRunPlatesQuery" Content="Run Query" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="23" Margin="0,0,0,0" Focusable="False" Click="Button_Click_btnRunPlatesQuery"/>
                    </DockPanel>

                    <DockPanel x:Name="dkpPlateCleaningsQ" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0" Visibility="Collapsed" Grid.Column="1">
                        <ComboBox x:Name="cmbPlateCleaningsQuery" HorizontalAlignment="Right" VerticalAlignment="Top" Width="250" Height="23" Margin="0,0,0,0"  Focusable="False">
                            <ComboBoxItem Content="Plates due for cleaning in the next week" />
                            <ComboBoxItem Content="Plate cleanings by plate cleaning ID" />
                            <ComboBoxItem Content="Plate cleanings by plate barcode" />
                            <ComboBoxItem Content="Plate cleanings by date" />
                        </ComboBox>
                        <Button x:Name="btnRunPlateCleaningsQuery" Content="Run Query" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="23" Margin="0,0,0,0" Focusable="False" Click="Button_Click_btnRunPlateCleaningsQuery"/>
                    </DockPanel>

                    <!--Start tblPlates Grid-->

                    <Grid x:Name="tblPlatesGrid" Background="#FF555555" DataContext="{StaticResource tblPlatesViewSource}" Margin="0,25,0,0">
                        <TextBox x:Name="txtPlate_Barcode" Text="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.plate_Barcode}" HorizontalAlignment="Left" Height="23" Margin="145,25,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200"/>
                        <ComboBox x:Name="cmbPlate_Size" SelectedItem="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.plate_Size}" HorizontalAlignment="Left" Height="23" Margin="145,60,0,0" VerticalAlignment="Top" Width="200"/>
                        <CheckBox x:Name="cbPlate_In_Use" IsChecked="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.in_Use}" Content="In Use" HorizontalAlignment="Left" Margin="145,95,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <CheckBox x:Name="cbPlate_Overdue_Cleaning" IsChecked="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.overdue_Cleaning}" Content="Overdue Cleaning" HorizontalAlignment="Left" Margin="215,95,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <TextBox x:Name="txtPlate_Uses_Today" Text="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.uses_Today}" HorizontalAlignment="Left" Height="23" Margin="145,130,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200"/>
                        <TextBox x:Name="txtPlate_Total_Uses" Text="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.total_Uses}" HorizontalAlignment="Left" Height="23" Margin="145,165,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200"/>
                        <ComboBox x:Name="cmbPlate_Location" SelectedValue="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.location}" HorizontalAlignment="Left" Height="23" Margin="145,200,0,0" VerticalAlignment="Top" Width="200"/>
                        <TextBox x:Name="txtPlate_Photo" Text="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.plate_Photo}" HorizontalAlignment="Left" Height="23" Margin="145,235,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="200"/>
                        <DatePicker x:Name="dpPlate_Purchase_Date" SelectedDate="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.purchase_Date}" HorizontalAlignment="Left" Height="23" Margin="145,270,0,0" VerticalAlignment="Top" Width="200"/>
                        <DatePicker x:Name="dpPlate_Warranty_Expire" SelectedDate="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.warranty_Expire}" HorizontalAlignment="Left" Height="23" Margin="145,305,0,0" VerticalAlignment="Top" Width="200"/>
                        <DatePicker x:Name="dpPlate_Out_Of_Service" SelectedDate="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.out_Of_Service, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="145,340,0,0" VerticalAlignment="Top" Width="200"/>
                        <DatePicker x:Name="dpPlate_Date_Replaced" SelectedDate="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.date_Replaced, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="145,375,0,0" VerticalAlignment="Top" Width="200"/>
                        <TextBox x:Name="txtPlate_Notes" Text="{Binding ElementName=tblPlatesDataGrid, Path=SelectedItem.notes, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=Default}" HorizontalAlignment="Left" Height="23" Margin="145,410,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200"/>
                        <Label x:Name="lblPlate_Barcode" Content="Plate Barcode" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Size" Content="Plate Size" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblUses_Today" Content="Uses Today" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblTotal_Uses" Content="Total Uses" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Location" Content="Location" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Photo" Content="Plate Photo" HorizontalAlignment="Left" Margin="10,235,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPurchase_Date" Content="Purchase Date" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblWarranty_Expire" Content="Warranty Expiration" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblOut_Of_Service" Content="Out of Service" HorizontalAlignment="Left" Margin="10,340,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblDate_Replaced" Content="Replacement Date" HorizontalAlignment="Left" Margin="10,375,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblNotes" Content="Notes" HorizontalAlignment="Left" Margin="10,410,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <DataGrid x:Name="tblPlatesDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="350,0,0,0" RowDetailsVisibilityMode="VisibleWhenSelected" AlternatingRowBackground="#CCCCCC">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="plate_BarcodeColumn" Binding="{Binding plate_Barcode}" Header="plate Barcode" Width="Auto"/>
                                <DataGridTextColumn x:Name="plate_SizeColumn" Binding="{Binding plate_Size}" Header="plate Size" Width="Auto"/>
                                <DataGridCheckBoxColumn x:Name="in_UseColumn" Binding="{Binding in_Use}" Header="in Use" Width="Auto"/>
                                <DataGridTextColumn x:Name="plate_In_Use_By" Binding="{Binding in_Use_By}" Header="In Use By" Width="Auto" Visibility="Visible"/>
                                <DataGridTextColumn x:Name="uses_TodayColumn" Binding="{Binding uses_Today}" Header="uses Today" Width="Auto"/>
                                <DataGridTextColumn x:Name="plate_Total_Uses" Binding="{Binding total_Uses}" Header="Total Uses" Width="Auto" />
                                <DataGridCheckBoxColumn x:Name="overdue_CleaningColumn" Binding="{Binding overdue_Cleaning}" Header="overdue Cleaning" Width="Auto"/>
                                <DataGridTextColumn x:Name="locationColumn" Binding="{Binding location}" Header="location" Width="Auto"/>
                                <DataGridHyperlinkColumn x:Name="plate_PhotoColumn" Binding="{Binding plate_Photo}" Header="plate Photo" Width="SizeToHeader">
                                    <DataGridHyperlinkColumn.ElementStyle>
                                        <Style>
                                            <!--Points to Handler method to search local path for image-->
                                            <EventSetter Event="Hyperlink.Click" Handler="DG_Hyperlink_Click"/>
                                        </Style>
                                    </DataGridHyperlinkColumn.ElementStyle>
                                </DataGridHyperlinkColumn>
                                <DataGridTemplateColumn x:Name="purchase_DateColumn" CanUserSort="True" SortMemberPath="purchase_Date"  Header="purchase Date" Width="SizeToHeader">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding purchase_Date, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn x:Name="warranty_ExpireColumn" CanUserSort="True" SortMemberPath="warranty_Expire" Header="warranty Expire" Width="SizeToHeader">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding warranty_Expire, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn x:Name="out_Of_ServiceColumn" CanUserSort="True" Header="out Of Service" Width="SizeToHeader">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding out_Of_Service, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn x:Name="date_ReplacedColumn" CanUserSort="True" Header="date Replaced" Width="SizeToHeader">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding date_Replaced, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn x:Name="notesColumn" Binding="{Binding notes}" Header="notes" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="btnInsertPlate" Content="New" HorizontalAlignment="Left" Margin="10,445,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_btnInsertPlate" Focusable="False"/>
                        <Button x:Name="btnUpdatePlate" Content="Save" HorizontalAlignment="Left" Margin="145,445,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_btnUpdatePlate" Focusable="False"/>
                        <Button x:Name="btnDeletePlate" Content="Delete" HorizontalAlignment="Left" Margin="270,445,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_btnDeletePlate" Focusable="False"/>
                    </Grid>

                    <!--End tblPlates Grid-->

                    <!--Start tblPlateCleanings Grid-->

                    <Grid x:Name="tblPlateCleaningsGrid" Background="#FF555555" DataContext="{StaticResource tblPlateCleaningsViewSource}" Margin="0,25,0,0" Visibility="Collapsed">
                        <TextBox x:Name="txtPlate_Cleaning_ID" Text="{Binding ElementName=tblPlateCleaningsDataGrid, Path=SelectedItem.plate_Cleaning_ID}" HorizontalAlignment="Left" Height="23" Margin="145,25,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200" />
                        <TextBox x:Name="txtPlate_Barcode_tblPC" Text="{Binding ElementName=tblPlateCleaningsDataGrid, Path=SelectedItem.plate_Barcode}" HorizontalAlignment="Left" Height="23" Margin="145,60,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200" />
                        <DatePicker x:Name="dpPlate_Date_Cleaned" SelectedDate="{Binding ElementName=tblPlateCleaningsDataGrid, Path=SelectedItem.date_Cleaned}" HorizontalAlignment="Left" Height="23" Margin="145,95,0,0" VerticalAlignment="Top" Width="200" />
                        <TextBox x:Name="txtPlate_Cleaned_By" Text="{Binding ElementName=tblPlateCleaningsDataGrid, Path=SelectedItem.cleaned_By}" HorizontalAlignment="Left" Height="23" Margin="145,130,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200" Visibility="Visible"/>
                        <DatePicker  x:Name="dpPlate_Date_Next_Cleaning" SelectedDate="{Binding ElementName=tblPlateCleaningsDataGrid, Path=SelectedItem.date_Next_Cleaning}" HorizontalAlignment="Left" Height="23" Margin="145,165,0,0" VerticalAlignment="Top" Width="200" />
                        <TextBox x:Name="txtPlate_Cleaning_Notes" Text="{Binding ElementName=tblPlateCleaningsDataGrid, Path=SelectedItem.notes}" HorizontalAlignment="Left" Height="23" Margin="145,200,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200" />
                        <Label x:Name="lblPlate_Cleaning_ID" Content="Plate Cleaning ID" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Cleaning_Barcode" Content="Plate Barcode" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Date_Cleaned" Content="Date Cleaned" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Cleaned_By" Content="Cleaned By" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Date_Next_Cleaning" Content="Date Next Cleaning" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <Label x:Name="lblPlate_Cleaning_Notes" Content="Notes" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Foreground="#FF11E81B" FontSize="14"/>
                        <DataGrid x:Name="tblPlateCleaningsDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="350,0,0,0" RowDetailsVisibilityMode="VisibleWhenSelected" AlternatingRowBackground="#CCCCCC">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="plate_Cleaning_IDColumn" Binding="{Binding plate_Cleaning_ID}" Header="plate Cleaning ID" Width="Auto"/>
                                <DataGridTextColumn x:Name="plate_BarcodeColumn1" Binding="{Binding plate_Barcode}" Header="plate Barcode" Width="Auto"/>
                                <DataGridTemplateColumn x:Name="date_CleanedColumn" CanUserSort="True" Header="date Cleaned" Width="SizeToHeader">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding date_Cleaned, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn x:Name="cleaned_ByColumn" Binding="{Binding cleaned_By}" CanUserSort="True" Header="cleaned By" Width="SizeToHeader" Visibility="Visible"/>
                                <DataGridTemplateColumn x:Name="date_Next_CleaningColumn" CanUserSort="True" Header="date Next Cleaning" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker SelectedDate="{Binding date_Next_Cleaning, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn x:Name="notesColumn1" Binding="{Binding notes}" Header="notes" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="btnInsertPlateCleaning" Content="New" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="10,235,0,0" Focusable="False" Click="Button_Click_btnInsertPlateCleaning"/>
                        <Button x:Name="btnUpdatePlateCleaning" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="145,235,0,0" Focusable="False" Click="Button_Click_btnUpdatePlateCleaning"/>
                        <Button x:Name="btnDeletePlateCleaning" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="270,235,0,0" Focusable="False" Click="Button_Click_btnDeletePlateCleaning"/>
                    </Grid>

                    <!--End tblPlateCleanings Grid-->

                </Grid>
            </TabItem>

            <!--End Plates TabItem-->

            <TabItem x:Name="tabCassettes" Header="Cassettes" Height="25" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left">
                <Grid Background="#FF555555">
                    <DockPanel x:Name="dkpCassettes" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0" LastChildFill="False">
                        <Label x:Name="lblCassettes" Content="Cassettes" FontSize="18" Foreground="#FF11E81B" VerticalAlignment="Top" HorizontalAlignment="Left" Focusable="False" Width="150" Height="25" Margin="0,0,0,0" Padding="0,0,0,0" />
                        <Button x:Name="btnViewCassettes" Content="Cassettes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="200,0,0,0" Focusable="False" Click="Button_Click_btnViewCassettes"/>
                        <Button x:Name="btnViewCassetteCleanings" Content="Cleanings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="15,0,0,0" Focusable="False" Click="Button_Click_btnViewCassetteCleanings"/>
                        <Button x:Name="btnViewCassetteServicings" Content="Servicings" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Margin="15,0,0,0" Focusable="False" Click="Button_Click_btnViewCassetteServicings"/>
                        <Button x:Name="btnCassettesRefresh" Content="Refresh" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Margin="15,0,0,0" Focusable="False" Click="Button_Click_tabCassettesRefresh"/>
                    </DockPanel>

                    <DockPanel x:Name="dkpCassettesQ" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0">
                        <ComboBox x:Name="cmbCassettesQuery" HorizontalAlignment="Right" VerticalAlignment="Top" Width="250" Height="23" Margin="0,0,0,0"  Focusable="False">
                            <ComboBoxItem Content="Cassettes due for cleaning" />
                            <ComboBoxItem Content="New Cassettes" />
                            <ComboBoxItem Content="Cassettes needing replacement" />
                            <ComboBoxItem Content="Cassettes bought by date" />
                            <ComboBoxItem Content="Cassettes bought in past given weeks" />
                            <ComboBoxItem Content="Cassettes bought in past given months" />
                            <ComboBoxItem Content="Expired cassette warranties" />
                            <ComboBoxItem Content="Cassette warranties expiring in given number of weeks" />
                            <ComboBoxItem Content="Cassettes by location" />
                            <ComboBoxItem Content="Cassette by who is currently using it" />
                            <ComboBoxItem Content="Cassettes sent out for service" />
                            <ComboBoxItem Content="Cassettes sent out to be serviced by date" />
                            <ComboBoxItem Content="Cassettes that need to be sent out for service" />
                        </ComboBox>
                        <Button x:Name="btnRunCassettesQuery" Content="Run Query" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="23" Margin="0,0,0,0" Focusable="False" Click="Button_Click_btnRunCassettesQuery"/>
                    </DockPanel>

                    <DockPanel x:Name="dkpCassetteCleaningsQ" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0" Visibility="Collapsed">
                        <ComboBox x:Name="cmbCassetteCleaningsQuery" HorizontalAlignment="Right" VerticalAlignment="Top" Width="250" Height="23" Margin="0,0,0,0"  Focusable="False">
                            <ComboBoxItem Content="Cassette cleanings by cassette cleaning ID" />
                            <ComboBoxItem Content="Cassette cleanings by cassette barcode" />
                            <ComboBoxItem Content="Cassette cleanings by date" />
                            <ComboBoxItem Content="Cassettes due for cleaning in the next week" />
                        </ComboBox>
                        <Button x:Name="btnRunCassetteCleaningsQuery" Content="Run Query" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="23" Margin="0,0,0,0" Focusable="False" Click="Button_Click_btnRunCassetteCleaningsQuery"/>
                    </DockPanel>

                    <DockPanel x:Name="dkpCassetteServicingsQ" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="Auto" Margin="0,0,0,0" Visibility="Collapsed">
                        <ComboBox x:Name="cmbCassetteServicingsQuery" HorizontalAlignment="Right" VerticalAlignment="Top" Width="250" Height="23" Margin="0,0,0,0"  Focusable="False">
                            <ComboBoxItem Content="Cassette servicings by cassette servicing ID" />
                            <ComboBoxItem Content="Cassette servicings by barcode" />
                            <ComboBoxItem Content="Cassette servicings by date servicing needed" />
                            <ComboBoxItem Content="Cassette servicings by date back in service" />
                        </ComboBox>
                        <Button x:Name="btnRunCassetteServicingsQuery" Content="Run Query" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="23" Margin="0,0,0,0" Focusable="False" Click="Button_Click_btnRunCassetteServicingsQuery"/>
                    </DockPanel>

                    <!--Start tblCassettes Grid-->

                    <Grid x:Name="tblCassettesGrid" Background="#FF555555" Margin="0,25,0,0" DataContext="{StaticResource tblCassettesViewSource}">
                        <TextBox x:Name="txtCassette_Barcode" Text="{Binding ElementName=tblCassettesDataGrid, Path=SelectedItem.cassette_Barcode}" HorizontalAlignment="Left" Height="23" Margin="145,25,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="200"/>
